<%= form_tag '/login', method: :post do %>
  <div class='form-group'>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class='form-group'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class='form-group'>
    <%= submit_tag "Log In!" %>
  </div>
<% end %>